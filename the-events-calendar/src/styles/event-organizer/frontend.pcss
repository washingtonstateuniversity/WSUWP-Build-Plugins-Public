/**
 * Organizer block view styles
 *
 * @since  0.2.4-alpha
 */
.tribe-block__organizer__details {
	margin: 15px 0;
	position: relative;

	h3 {
		font-weight: bold;
		font-size: 1.3125rem;
		color: #000;
		font-family: 'Helvetica', 'sans-serif';
		margin-bottom: 4px;
		margin-top: 0;
	}

	p {
		font-size: 1rem;
		color: #545D66;
		margin-bottom: 2px;
		margin-top: 0;
		font-weight: normal;
		font-family: 'Helvetica', 'sans-serif';
	}
}