/* -----------------------------------------------------------------------------
 *
 * Top Bar
 *
 * ----------------------------------------------------------------------------- */

.tribe-events {

	.tribe-events-c-top-bar {
		@media (--viewport-medium) {
			align-items: center;
			display: flex;
			flex-direction: row;
			flex-wrap: wrap;
			margin-bottom: var(--spacer-5);
			width: 100%;
		}
	}

	.tribe-events-c-top-bar__nav {
		@mixin hidden;

		@media (--viewport-medium) {
			display: block !important;
			flex: none;
			visibility: visible;
		}
	}

	.tribe-events-c-top-bar__nav-list {
		display: flex;
	}

	.tribe-events-c-top-bar__nav-list-item {
		flex: none;
		padding-right: 15px;
	}

	.tribe-events-c-top-bar__nav-link {
		display: block;

		&:before {
			@media (--viewport-medium) {
				height: 18px;
				width: 11px;
			}
		}
	}

	.tribe-events-c-top-bar__today-button {
		@mixin hidden;

		@media (--viewport-medium) {
			display: block !important;
			flex: none;
			margin-right: 15px;
			visibility: visible;
		}
	}

	.tribe-events-c-top-bar__datepicker {
		position: relative;

		@media (--viewport-medium) {
			margin: 0;
			padding: 0;
		}
	}

	.tribe-events-c-top-bar__datepicker-button {
		align-items: center;
		display: flex;
		flex: none;
		transition: var(--transition-opacity);

		&:hover,
		&:focus {
			opacity: var(--opacity-icon-hover);
		}

		&:active {
			opacity: var(--opacity-icon-active);
		}

		&:after {
			background-image: svg-inline(caret-down);
			background-repeat: no-repeat;
			background-size: contain;
			content: '';
			display: block;
			margin-left: var(--spacer-1);
			height: 6px;
			width: 10px;

			@media (--viewport-medium) {
				height: 7px;
				width: 12px;
			}
		}
	}

	.tribe-events-c-top-bar__datepicker-button--open {

		&:after {
			background-image: svg-inline(caret-up);
		}
	}

	.tribe-events-c-top-bar__datepicker-container {
		bottom: 0;
		left: 0;
		max-width: calc(100% + 66px); /* mobile search and view selector buttons have 66px width */
		position: absolute;
		width: 363px;

		@media (--viewport-medium) {
			max-width: none;
			min-width: 363px;
		}
	}

	.tribe-events-c-top-bar__actions {
		@mixin hidden;

		@media (--viewport-medium) {
			display: block !important;
			flex: none;
			margin-left: auto;
			visibility: visible;
		}
	}

	/* -----------------------------------------------------------------------------
	 *
	 * Top Bar: Theme Overrides
	 *
	 * ----------------------------------------------------------------------------- */

	/* -----------------------------------------------------------------------------
	 * Theme Overrides - Enfold
	 * ----------------------------------------------------------------------------- */

	#top.tribe-theme-enfold & {

		.tribe-events-c-top-bar__datepicker-input {
			@mixin visually-hide;
		}
	}

	/* -----------------------------------------------------------------------------
	 * Theme Overrides - Avada
	 * ----------------------------------------------------------------------------- */

	.tribe-theme-avada & {

		.tribe-events-c-top-bar__datepicker-input {
			@mixin visually-hide;
		}
	}
}
