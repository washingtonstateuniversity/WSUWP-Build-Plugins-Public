.tribe-events {

	/* -----------------------------------------------------------------------------
	 * Calendar Event
	 * ----------------------------------------------------------------------------- */

	.tribe-events-calendar-month__calendar-event {
		margin: var(--spacer-1) 0;
		padding: 0 var(--spacer-3);
		position: relative;

		&:first-child {
			margin-top: 0;
		}

		&:last-child {
			margin-bottom: 0;
			padding-bottom: var(--spacer-3);
		}
	}

	.tribe-events-calendar-month__day--past {

		.tribe-events-calendar-month__calendar-event {
			opacity: 0.5;
		}
	}

	.tribe-events-calendar-month__multiday-event-wrapper + .tribe-events-calendar-month__calendar-event {
		margin-top: 0;
	}

	.tribe-events-calendar-month__multiday-event-wrapper + .tribe-events-calendar-month__calendar-event--featured {
		margin-top: var(--spacer-1);
	}

	.tribe-events-calendar-month__calendar-event-featured-image-wrapper {
		margin-bottom: var(--spacer-0);
	}

	.tribe-events-calendar-month__calendar-event-featured-image-link {
		display: block;
		transition: var(--transition-opacity);

		&:hover,
		&:focus {
			opacity: var(--opacity-icon-hover);
		}

		&:active {
			opacity: var(--opacity-icon-active);
		}
	}

	.tribe-events-calendar-month__calendar-event-featured-image {
		padding-bottom: 56.25%;
	}

	.tribe-events-calendar-month__calendar-event-datetime {
		@mixin mobile-body-3;

		color: var(--color-text-secondary);

		> * {
			vertical-align: middle;
		}
	}

	.tribe-events-calendar-month__calendar-event--featured {

		&:before {
			background: var(--color-accent-primary);
			content: '';
			height: 100%;
			left: 3px;
			position: absolute;
			width: 2px;
		}

		&:last-child {
			&:before {
				height: calc(100% - var(--spacer-3));
			}
		}
	}

	.tribe-events-calendar-month__calendar-event-datetime-featured,
	.tribe-events-calendar-month__calendar-event-datetime-recurring {
		display: inline-block;
	}

	.tribe-events-calendar-month__calendar-event-datetime-featured {
		margin-right: var(--spacer-0);
	}

	.tribe-events-calendar-month__calendar-event-datetime-recurring {
		margin-left: var(--spacer-0);
	}

	/* -----------------------------------------------------------------------------
	 * Calendar Event Tooltip
	 * ----------------------------------------------------------------------------- */

	.tribe-events-calendar-month__calendar-event-tooltip-featured-image-wrapper {
		margin-bottom: var(--spacer-2);
		width: 206px;

		&:last-child {
			margin-bottom: 0;
		}
	}

	.tribe-events-calendar-month__calendar-event-tooltip-featured-image-link {
		display: block;
		transition: var(--transition-opacity);

		&:hover,
		&:focus {
			opacity: var(--opacity-icon-hover);
		}

		&:active {
			opacity: var(--opacity-icon-active);
		}
	}

	.tribe-events-calendar-month__calendar-event-tooltip-featured-image {
		padding-bottom: 56.25%;
	}

	.tribe-events-calendar-month__calendar-event-tooltip-description {
		margin-bottom: var(--spacer-1);

		&:last-child {
			margin-bottom: 0;
		}
	}

	.tribe-events-calendar-month__calendar-event-tooltip-cost {
		margin-top: var(--spacer-3);
	}
}
